{{! Use the main layout }}
{{!< main }}

<section class="profile-container">
    <div class="profile-avatar">
        <!-- Display the user's avatar or a default image if not available -->
        <img src="{{#if user.avatar_url}}{{user.avatar_url}}{{else}}/images/default-avatar.png{{/if}}" alt="Avatar of {{user.username}}">
    </div>
    
    <div class="profile-info">
        <h1>User Profile</h1>
        <h3>{{user.username}}</h3>
        <p>Member since: {{dateFormat user.memberSince "YYYY-MM-DD"}}</p>
        <!-- Additional user info could be displayed here if available -->
    </div>
</div>

<section class="user-posts">
    <h2>Your Contributions</h2>
    
    {{#if user.posts.length}}
        <div class="post-list">
            {{#each user.posts}}
                {{> post this}}
            {{/each}}
        </div>
    {{else}}
        <p class="no-posts">You have not posted yet. Start sharing your thoughts now!</p>
    {{endif}}
</section>


<style>
.profile-container {
    display: flex;
    justify-content: space-around;
    align-items: center;
    margin-top: 20px;
}

.profile-avatar img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
}

.profile-info h1 {
    color: #4A4A4A;
    font-size: 1.8em;
}

.profile-info h3 {
    color: #787878;
    font-size: 1.5em;
}

.no-posts {
    text-align: center;
    color: #888;
    margin-top: 20px;
}

.post-list {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
    margin-top: 20px;
}
</style>
